<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:srcCompat = "@drawable/super_call_man"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="number"
                android:textColor="@color/colorBlackDim"
                android:textSize="@dimen/_13sdp"
                android:layout_below="@+id/txtUserName"/>

            <TextView
                android:id="@+id/txtCallDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNumber"

                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlueDim"/>
            <TextView
                android:id="@+id/txtCallTimeInstant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlackDim"/>
            <TextView
                android:id="@+id/txtCallTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlackDim"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/txtCallDate"/>

        </RelativeLayout>


    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorDimWhite" />
</LinearLayout>